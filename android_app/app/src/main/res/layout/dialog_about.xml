<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="20dp">

    <!-- Header with close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ABOUT US"
            android:textColor="#ededed"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnCloseAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕"
            android:textColor="#666666"
            android:textSize="24sp"
            android:paddingHorizontal="8dp" />
    </LinearLayout>

    <!-- App Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ParkSense"
        android:textColor="#42bc2b"
        android:textSize="24sp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Version -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        android:textColor="#666666"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smart Parking Management System\n\nBuilt with Arduino &amp; Supabase\nfor real-time parking monitoring."
        android:textColor="#ededed"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#272727"
        android:layout_marginBottom="16dp" />

    <!-- Team Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEVELOPED BY"
        android:textColor="#666666"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BSCS 3-B Group"
        android:textColor="#ededed"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="© 2024-2025"
        android:textColor="#666666"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:gravity="center" />

</LinearLayout>
