<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Top Row: Date/Revenue + Usage/Sessions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <!-- Left Column: Date + Revenue -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <!-- Date Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:textColor="#ededed"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEC:17:2025"
                        android:textColor="#ededed"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.14" />
                </LinearLayout>

                <!-- Revenue Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Revenue:"
                        android:textColor="#ededed"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/revenueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textColor="#42bc2b"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Right Column: Usage/Sessions Card -->
            <LinearLayout
                android:layout_width="102dp"
                android:layout_height="165dp"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usage Rate:"
                    android:textColor="#ededed"
                    android:textSize="11sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/usageRateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#ededed"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sessions:"
                    android:textColor="#ededed"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/sessionsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ededed"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </LinearLayout>

        <!-- Session History Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Session History"
                    android:textColor="#ededed"
                    android:textSize="11sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Overtime fee applied"
                    android:textColor="#ededed"
                    android:textSize="9sp"
                    android:textStyle="italic"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sessionsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/emptySessionsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No sessions yet"
                android:textColor="#666666"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Peak Hours Card (Simplified) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peak Hours:"
                android:textColor="#ededed"
                android:textSize="11sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/peakHoursText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No data available yet"
                android:textColor="#666666"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_marginTop="20dp" />
        </LinearLayout>

        <!-- System Logs Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Logs:"
                android:textColor="#1f4fce"
                android:textSize="11sp"
                android:fontFamily="monospace" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/logsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1f4fce"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp" />
            </ScrollView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
