<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/item_bluetooth_background"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="4dp">

    <!-- Device Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HC-05"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPairedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bluetooth_paired"
                android:textSize="10sp"
                android:textColor="#3dd598"
                android:fontFamily="monospace"
                android:background="@drawable/badge_paired"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDeviceAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00:00:00:00"
            android:textSize="11sp"
            android:textColor="#676767"
            android:fontFamily="monospace"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- RSSI Indicator (optional) -->
    <LinearLayout
        android:id="@+id/layoutRssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSSI"
            android:textSize="9sp"
            android:textColor="#676767"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/txtRssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-65 dBm"
            android:textSize="11sp"
            android:textColor="#3dd598"
            android:fontFamily="monospace" />
    </LinearLayout>

</LinearLayout>
