<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#0a0909"
    android:paddingVertical="16dp"
    android:paddingHorizontal="24dp"
    android:minWidth="346dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/txtSlotName"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="P1"
            android:textSize="24sp"
            android:textColor="#ededed"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/txtStatusLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OCCUPIED"
            android:textSize="20sp"
            android:textColor="#42bc2b"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:gravity="center" />

        <View
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_close"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Time Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/txtSinceTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Since: 2:30 PM Today"
            android:textSize="16sp"
            android:textColor="#ededed"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00h : 00m : 00s"
            android:textSize="16sp"
            android:textColor="#ededed"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- Billing Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slot_details_billing"
            android:textSize="14sp"
            android:textColor="#ededed"
            android:fontFamily="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtBillingAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="₱ 0.00"
                android:textSize="32sp"
                android:textColor="#ededed"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBillingRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱25/hr"
                android:textSize="16sp"
                android:textColor="#ededed"
                android:fontFamily="monospace"
                android:fontStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sensor Data Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/slot_details_sensor_data"
                android:textSize="14sp"
                android:textColor="#ededed"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/txtSensorPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="14sp"
                android:textColor="#ededed"
                android:fontFamily="monospace" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressSensor"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:progressDrawable="@drawable/sensor_progress"
            android:background="#1e1e1e"
            android:max="100"
            android:progress="0" />
    </LinearLayout>

    <!-- Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnDisableEnable"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:text="@string/slot_details_disable"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_danger"
            android:fontFamily="monospace" />

        <Button
            android:id="@+id/btnPing"
            android:layout_width="103dp"
            android:layout_height="40dp"
            android:text="@string/slot_details_ping"
            android:textSize="16sp"
            android:textColor="#121111"
            android:background="@drawable/button_primary"
            android:fontFamily="monospace" />
    </LinearLayout>

</LinearLayout>
